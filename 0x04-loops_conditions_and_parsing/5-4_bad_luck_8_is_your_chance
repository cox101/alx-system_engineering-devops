#!/usr/bin/env bash
# Bash script to display messages based on loop iteration

# Initialize counter
counter=1

# While loop to iterate from 1 to 10
while [ $counter -le 10 ]
do
    # Use if, elif, else statements to display different messages based on loop iteration
    if [ $counter -eq 4 ]
    then
        # Display "bad luck" for the 4th iteration
        echo "bad luck"
    elif [ $counter -eq 8 ]
    then
        # Display "good luck" for the 8th iteration
        echo "good luck"
    else
        # Display "Best School" for other iterations
        echo "Best School"
    fi

    # Increment counter
    ((counter++))
done
