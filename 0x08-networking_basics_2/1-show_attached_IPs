#!/usr/bin/env bash

# Displays all active IPv4 IPs on the machine it's executed on

# Check if the 'ip' command is available
command -v ip >/dev/null 2>&1 || { echo >&2 "The 'ip' command is required but not installed. Aborting."; exit 1; }

# Use the 'ip' command to get a list of all active interfaces and their IPs
ip -4 addr show | awk '/inet / {print $2}' | cut -d'/' -f1

